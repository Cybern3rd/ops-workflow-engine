---
import Layout from '../../layouts/Layout.astro';
import TaskDetail from '../../components/TaskDetail';

// Generate paths for all tasks at build time
export async function getStaticPaths() {
  // Fetch tasks from API
  const response = await fetch('https://api.workflow-engine.org/api/tasks');
  const tasks = await response.json();
  
  return tasks.map((task: any) => ({
    params: { id: task.id },
  }));
}

const { id } = Astro.params;
---

<Layout title={`Task Details - ops.workflow-engine.org`}>
  <main class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white">
    <header class="border-b border-gray-700/50 backdrop-blur-lg bg-gray-900/80 sticky top-0 z-50">
      <div class="container mx-auto px-4 py-4 flex items-center justify-between">
        <div class="flex items-center gap-3">
          <a href="/" class="w-10 h-10 rounded-xl bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center hover:opacity-80 transition-opacity">
            <span class="text-2xl">⚡</span>
          </a>
          <div>
            <h1 class="text-xl font-bold">ops.workflow-engine.org</h1>
            <p class="text-sm text-gray-400">Task Details</p>
          </div>
        </div>
        
        <a href="/" class="px-4 py-2 rounded-lg bg-gray-700 hover:bg-gray-600 transition-colors font-medium">
          ← Back to Board
        </a>
      </div>
    </header>

    <div class="container mx-auto px-4 py-8">
      <TaskDetail taskId={id} client:load />
    </div>
  </main>
</Layout>

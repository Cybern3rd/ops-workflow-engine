---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Task Details - ops.workflow-engine.org">
  <main class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white">
    <header class="border-b border-gray-700/50 backdrop-blur-lg bg-gray-900/80 sticky top-0 z-50">
      <div class="container mx-auto px-4 py-4 flex items-center justify-between">
        <div class="flex items-center gap-3">
          <a href="/" class="w-10 h-10 rounded-xl bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center hover:scale-110 transition-transform">
            <span class="text-2xl">‚ö°</span>
          </a>
          <div>
            <h1 class="text-xl font-bold" id="task-title">Loading...</h1>
            <p class="text-sm text-gray-400">Task Details</p>
          </div>
        </div>
        
        <div class="flex items-center gap-4">
          <button id="edit-task-btn" class="px-4 py-2 rounded-lg bg-blue-600 hover:bg-blue-700 transition-colors font-medium">
            ‚úèÔ∏è Edit
          </button>
          <a href="/" class="text-gray-300 hover:text-white transition-colors">
            ‚Üê Back to Board
          </a>
        </div>
      </div>
    </header>

    <div class="container mx-auto px-4 py-8 max-w-6xl">
      <div id="task-container">
        <div class="flex items-center justify-center h-64">
          <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500"></div>
        </div>
      </div>
    </div>
  </main>

  <script>
    import { api } from '../../lib/api';

    const taskId = window.location.pathname.split('/').pop();
    let task: any = null;
    let agents: any = {};

    async function loadTask() {
      if (!taskId) return;

      try {
        const [taskData, agentsList, comments, documents, activity] = await Promise.all([
          api.getTask(taskId),
          api.get('/api/agents'),
          api.getComments(taskId),
          api.get(`/api/documents/list/${taskId}`),
          api.getActivity(50, taskId),
        ]);

        task = taskData;

        // Build agent lookup
        agents = agentsList.reduce((acc: any, agent: any) => {
          acc[agent.id] = agent;
          return acc;
        }, {});

        // Update header
        const titleEl = document.getElementById('task-title');
        if (titleEl) titleEl.textContent = task.title;

        const agent = agents[task.assigned_to];
        const createdBy = agents[task.created_by];

        const container = document.getElementById('task-container');
        if (!container) return;

        container.innerHTML = `
          <div class="grid lg:grid-cols-3 gap-8">
            <!-- Main content (left 2 cols) -->
            <div class="lg:col-span-2 space-y-6">
              <!-- Task info -->
              <section class="bg-gray-800/50 backdrop-blur rounded-xl border border-gray-700 p-6">
                <div class="flex items-start justify-between mb-4">
                  <div>
                    <div class="flex items-center gap-3 mb-3">
                      <span class="text-2xl">${getPriorityEmoji(task.priority)}</span>
                      <span class="px-3 py-1 rounded-full text-sm font-medium ${getStatusColor(task.status)}">
                        ${task.status}
                      </span>
                      ${task.category ? `<span class="px-3 py-1 rounded-full text-sm bg-purple-900/50 text-purple-300">${task.category}</span>` : ''}
                    </div>
                    <h2 class="text-2xl font-bold mb-2">${task.title}</h2>
                    <p class="text-gray-400">${task.description || 'No description provided.'}</p>
                  </div>
                </div>

                ${task.tags ? `
                  <div class="flex flex-wrap gap-2 mt-4">
                    ${JSON.parse(task.tags).map((tag: string) => `
                      <span class="px-3 py-1 rounded-full text-sm bg-blue-900/50 text-blue-300">${tag}</span>
                    `).join('')}
                  </div>
                ` : ''}
              </section>

              <!-- Documents -->
              ${documents.length > 0 ? `
                <section class="bg-gray-800/50 backdrop-blur rounded-xl border border-gray-700 p-6">
                  <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
                    <span>üìé</span> Attachments
                  </h3>
                  <div class="space-y-2">
                    ${documents.map((doc: any) => `
                      <a href="${doc.url}" target="_blank" class="flex items-center justify-between p-3 bg-gray-900/50 rounded-lg hover:bg-gray-900 transition-colors">
                        <div class="flex items-center gap-3">
                          <span class="text-2xl">üìÑ</span>
                          <div>
                            <div class="font-medium">${doc.filename}</div>
                            <div class="text-sm text-gray-400">
                              Uploaded by ${agents[doc.uploaded_by]?.name || 'Unknown'} ‚Ä¢ ${new Date(doc.uploaded_at * 1000).toLocaleDateString()}
                            </div>
                          </div>
                        </div>
                        <span class="text-blue-400">View ‚Üí</span>
                      </a>
                    `).join('')}
                  </div>
                </section>
              ` : ''}

              <!-- Comments -->
              <section class="bg-gray-800/50 backdrop-blur rounded-xl border border-gray-700 p-6">
                <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
                  <span>üí¨</span> Comments (${comments.length})
                </h3>

                <div class="space-y-4 mb-4">
                  ${comments.length > 0 ? comments.map((comment: any) => {
                    const commentAgent = agents[comment.agent_id];
                    return `
                      <div class="flex items-start gap-3">
                        <div class="text-2xl flex-shrink-0">${commentAgent?.emoji || 'üë§'}</div>
                        <div class="flex-1 bg-gray-900/50 rounded-lg p-3">
                          <div class="flex items-baseline gap-2 mb-1">
                            <span class="font-bold">${commentAgent?.name || 'Unknown'}</span>
                            <span class="text-sm text-gray-500">${new Date(comment.timestamp * 1000).toLocaleString()}</span>
                          </div>
                          <p class="text-gray-300">${comment.content}</p>
                        </div>
                      </div>
                    `;
                  }).join('') : '<p class="text-gray-500 text-center py-4">No comments yet.</p>'}
                </div>

                <!-- Add comment form -->
                <form id="comment-form" class="flex gap-2">
                  <input
                    type="text"
                    id="comment-input"
                    placeholder="Add a comment..."
                    class="flex-1 bg-gray-900 border border-gray-700 rounded-lg px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
                    required
                  />
                  <button
                    type="submit"
                    class="px-6 py-2 rounded-lg bg-blue-600 hover:bg-blue-700 transition-colors font-medium"
                  >
                    Send
                  </button>
                </form>
              </section>
            </div>

            <!-- Sidebar (right col) -->
            <div class="space-y-6">
              <!-- Metadata -->
              <section class="bg-gray-800/50 backdrop-blur rounded-xl border border-gray-700 p-6">
                <h3 class="text-lg font-bold mb-4">Details</h3>
                <div class="space-y-3 text-sm">
                  ${agent ? `
                    <div>
                      <div class="text-gray-400 mb-1">Assigned to</div>
                      <div class="flex items-center gap-2">
                        <span class="text-xl">${agent.emoji}</span>
                        <span class="font-medium">${agent.name}</span>
                      </div>
                    </div>
                  ` : '<div class="text-gray-500">Unassigned</div>'}

                  ${task.sprint ? `
                    <div>
                      <div class="text-gray-400 mb-1">Sprint</div>
                      <div class="font-medium">${task.sprint}</div>
                    </div>
                  ` : ''}

                  ${task.due_date ? `
                    <div>
                      <div class="text-gray-400 mb-1">Due Date</div>
                      <div class="font-medium">${new Date(task.due_date).toLocaleDateString()}</div>
                    </div>
                  ` : ''}

                  <div>
                    <div class="text-gray-400 mb-1">Created</div>
                    <div class="font-medium">${new Date(task.created_at * 1000).toLocaleDateString()}</div>
                    ${createdBy ? `<div class="text-xs text-gray-500">by ${createdBy.name}</div>` : ''}
                  </div>

                  <div>
                    <div class="text-gray-400 mb-1">Last Updated</div>
                    <div class="font-medium">${new Date(task.updated_at * 1000).toLocaleDateString()}</div>
                  </div>
                </div>
              </section>

              <!-- Activity -->
              <section class="bg-gray-800/50 backdrop-blur rounded-xl border border-gray-700 p-6">
                <h3 class="text-lg font-bold mb-4">Recent Activity</h3>
                <div class="space-y-3 text-sm">
                  ${activity.map((item: any) => {
                    const activityAgent = agents[item.agent_id];
                    return `
                      <div class="border-l-2 border-gray-700 pl-3">
                        <div class="text-gray-400 text-xs mb-1">
                          ${new Date(item.timestamp * 1000).toLocaleString()}
                        </div>
                        <div>
                          <span class="font-medium">${activityAgent?.name || 'Unknown'}</span>
                          <span class="text-gray-400">${getActionText(item.action)}</span>
                        </div>
                      </div>
                    `;
                  }).join('')}
                </div>
              </section>
            </div>
          </div>
        `;

        // Setup comment form
        const commentForm = document.getElementById('comment-form');
        if (commentForm) {
          commentForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const input = document.getElementById('comment-input') as HTMLInputElement;
            if (!input || !input.value.trim()) return;

            try {
              await api.addComment(taskId, input.value);
              input.value = '';
              loadTask(); // Reload to show new comment
            } catch (error) {
              alert('Failed to add comment: ' + (error as Error).message);
            }
          });
        }

      } catch (error) {
        console.error('Failed to load task:', error);
        const container = document.getElementById('task-container');
        if (container) {
          container.innerHTML = `
            <div class="text-center text-red-400">
              <p class="text-xl mb-2">‚ùå Failed to load task</p>
              <p class="text-sm">${(error as Error).message}</p>
            </div>
          `;
        }
      }
    }

    function getPriorityEmoji(priority: string): string {
      switch (priority) {
        case 'p1-high': return 'üî¥';
        case 'p2-medium': return 'üü°';
        case 'p3-low': return 'üü¢';
        default: return '‚ö™';
      }
    }

    function getStatusColor(status: string): string {
      switch (status) {
        case 'to-do': return 'bg-gray-600 text-gray-200';
        case 'in-progress': return 'bg-blue-600 text-blue-100';
        case 'done': return 'bg-green-600 text-green-100';
        case 'blocked': return 'bg-red-600 text-red-100';
        default: return 'bg-gray-600';
      }
    }

    function getActionText(action: string): string {
      switch (action) {
        case 'created': return 'created this task';
        case 'updated': return 'updated this task';
        case 'comment_added': return 'added a comment';
        case 'document_uploaded': return 'uploaded a document';
        default: return action;
      }
    }

    loadTask();

    // Setup edit button
    const editBtn = document.getElementById('edit-task-btn');
    if (editBtn) {
      editBtn.addEventListener('click', () => {
        window.dispatchEvent(new CustomEvent('open-task-modal', { detail: { task } }));
      });
    }
  </script>
</Layout>
